@model Drip.Webapp.Models.AddNewExpenseViewModel

<form asp-controller="Expense" asp-action="AddExpense">
    <div class="form-group">

    </div>
    <div class="form-group">
        <label class="font-size-h6 font-weight-bolder text-dark">Amount in EUR (€)</label>
        <input asp-for="Amount" tabindex="1" class="form-control form-control-solid h-auto py-6 px-6 rounded-lg" type="text" />
    </div>
    <div class="form-group">
        <label class="font-size-h6 font-weight-bolder text-dark">Description of the expense</label>
        <input asp-for="Description" tabindex="1" class="form-control form-control-solid h-auto py-6 px-6 rounded-lg" type="text" />
    </div>

    <div class="pb-lg-0 pb-5">
        <button tabindex="1" type="submit" id="kt_shift_submit" class="btn btn-success btn-icon-split">Add Expense</button>
    </div>
</form>