@model Drip.Webapp.Models.AddIncomeCategoryViewModel

<label for="cars">Which category do you want to add ? </label>
<br />
<form asp-controller="Income" asp-action="AddIncomeCategoryForm" type="post">
    <select name="IncomeId">
        @foreach (var income in Model.AllIncomes)
        {
            <option value="@income.IncomeId"> @income.Description</option>
        }
    </select>

    <br />
    <input asp-for="IncomeCategory" tabindex="1" class="form-control form-control-solid h-auto py-6 px-6 rounded-lg" type="text" />
    

    <button class="btn btn-danger btn-icon-split" type="submit">SUBMIT</button>
</form>
